<div class="container mt-5 pt-5 pb-5">
  <h1 class="mb-3 trispace offwhite"><i class="fas fa-calendar-alt"></i> My Hostings</h1>
  <% if @pending_reservations.present? %>
    <h4 class="gray border-bottom pb-2 mb-3">Pending</h4>
    <div class="reservations-cards-owner mb-3">
      <% @pending_reservations.each do |pending_reservation| %>
        <div class="card-owner-hostings">
          <% if pending_reservation.planet.photos.first.present? %>
            <%= cl_image_tag(pending_reservation.planet.photos.first.key) %>
          <% else %>
             <%= image_tag "https://images.unsplash.com/photo-1506443432602-ac2fcd6f54e0?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=870&q=80" %>
          <% end %>
          <div class="card-owner-hostings-infos">
            <div class="d-flex justify-content-between align-items-end mt-1">
              <h3 class="trispace"><%= pending_reservation.planet.name %></h3>
              <%= link_to "<i class='fas fa-edit'></i>".html_safe, edit_reservation_path(pending_reservation), class: "add-review-button-re" %>
            </div>
            <h5 class="mt-2"><span style="color: gray;">Pending <i class="fas fa-clock me-1 ms-1"></i></span></h5>
            <p><span class="dark-gray">Guest: </span><%= link_to pending_reservation.user.name, user_path(pending_reservation.user), class: "offwhite" %>
            <p><%= pluralize((pending_reservation.end_date - pending_reservation.start_date).to_i, 'night') %> <i class="fas fa-moon me-2 ms-1"></i> <%= pluralize(pending_reservation.number_of_guests, 'guest') %> <i class="fas fa-users"></i></p>
            <p class="dark-gray"><%= pending_reservation.start_date %> to <%= pending_reservation.end_date %></p>
            <div class="d-flex mt-1 justify-content-end">
              <%= link_to "See details <i class='fas fa-arrow-right'></i>".html_safe, reservation_path(pending_reservation), class: "add-review-button-re" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
  <% if @approved_reservations.present? %>
    <h4 class="gray border-bottom pb-2 mb-3">Approved</h4>
    <div class="reservations-cards-owner mb-3">
      <% @approved_reservations.each do |approved_reservation| %>
        <div class="card-owner-hostings">
          <% if approved_reservation.planet.photos.first.present? %>
            <%= cl_image_tag(approved_reservation.planet.photos.first.key) %>
          <% else %>
             <%= image_tag "https://images.unsplash.com/photo-1506443432602-ac2fcd6f54e0?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=870&q=80" %>
          <% end %>
          <div class="card-owner-hostings-infos">
            <div class="d-flex justify-content-between align-items-end mt-1">
              <h3 class="trispace"><%= approved_reservation.planet.name %></h3>
              <%= link_to "<i class='fas fa-edit'></i>".html_safe, edit_reservation_path(approved_reservation), class: "add-review-button-re" %>
            </div>
            <h5 class="mt-2 green">Approved <i class="fas fa-check"></i></h5>
            <p><span class="dark-gray">Guest: </span><%= link_to approved_reservation.user.name, user_path(approved_reservation.user), class: "offwhite" %></p>
            <p><%= pluralize((approved_reservation.end_date - approved_reservation.start_date).to_i, 'night') %> <i class="fas fa-moon me-2 ms-1"></i> <%= pluralize(approved_reservation.number_of_guests, 'guest') %> <i class="fas fa-users"></i></p>
            <p class="dark-gray"><%= approved_reservation.start_date %> to <%= approved_reservation.end_date %></p>
            <div class="d-flex mt-1 justify-content-end">
              <%= link_to "See details <i class='fas fa-arrow-right'></i>".html_safe, reservation_path(approved_reservation), class: "add-review-button-re" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
  <% if @declined_reservations.present? %>
    <h4 class="gray border-bottom pb-2 mb-3">Declined</h4>
    <div class="reservations-cards-owner mb-3">
      <% @declined_reservations.each do |declined_reservation| %>
        <div class="card-owner-hostings">
          <% if declined_reservation.planet.photos.first.present? %>
            <%= cl_image_tag(declined_reservation.planet.photos.first.key) %>
          <% else %>
             <%= image_tag "https://images.unsplash.com/photo-1506443432602-ac2fcd6f54e0?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=870&q=80" %>
          <% end %>
          <div class="card-owner-hostings-infos">
            <div class="d-flex justify-content-between align-items-end  mt-1">
              <h3 class="trispace"><%= declined_reservation.planet.name %></h3>
              <%= link_to "<i class='fas fa-edit'></i>".html_safe, edit_reservation_path(declined_reservation), class: "add-review-button-re" %>
            </div>
            <h5 class="mt-2 red">Declined <i class="fas fa-times"></i></h5>
            <p><span class="dark-gray">Guest: </span><%= link_to declined_reservation.user.name, user_path(declined_reservation.user), class: "offwhite" %></p>
            <p><%= pluralize((declined_reservation.end_date - declined_reservation.start_date).to_i, 'night') %> <i class="fas fa-moon me-2 ms-1"></i> <%= pluralize(declined_reservation.number_of_guests, 'guest') %> <i class="fas fa-users"></i></p>
            <p class="dark-gray"><%= declined_reservation.start_date %> to <%= declined_reservation.end_date %></p>
            <div class="d-flex mt-1 justify-content-end">
              <%= link_to "See details <i class='fas fa-arrow-right'></i>".html_safe, reservation_path(declined_reservation), class: "add-review-button-re" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
  <% if !@reservations.first.present? %>
    <h5 class="gray"><em>No hostings at this time</em></h5>
  <% end %>
</div>
