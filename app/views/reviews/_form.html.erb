
    <%= simple_form_for([planet, review],
                      data: {
                      insert_in_list_target: "form",
                      action: "submit->insert-in-list#send submit->show#showForm"
                    }) do |f| %>
      <div class="star-rating">
        <% 5.times do |i| %>
          <input type="radio" name="review[rating]" value="<%= i + 1 %>" <%= "checked" if i == 2 %> />
        <% end %>
      </div>
      <%= f.input :content, input_html: { data: { "show-target": "content", action: "input->show#isContentEmpty" } } %>
      <%= f.submit "Create Review", id:"create-review-button", class:"btn btn-primary m-auto mt-1", data: { "show-target": "createReviewButton" }, style: "width: 100%", disabled: true %>
    <% end %>
