<div class="col col-6 mt-3">
  <div class="d-flex align-items-start justify-content-between ms-3 me-3">
    <div class="d-flex align-items-center">
      <div class="me-1">
        <% if review.user.photo.present? %>
          <%= cl_image_tag(review.user.photo.key, class: 'review-avatar') %>
        <% else %>
          <img src="https://images.unsplash.com/photo-1632395627760-72e6eca7f9c7?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1160&q=80" class="review-avatar" alt="">
        <% end %>
      </div>
      <div class="ms-3">
        <p class="trispace white pb-1" style="margin: 0">
          <%= link_to review.user.name, user_path(review.user), style: "text-decoration: none" %>
          </p>
        <% (review.rating).times do %>
          <i class="fas fa-star warning stars"></i>
        <% end %>
        <% (5 - review.rating).times do %>
          <i class="far fa-star stars"></i>
        <% end %>
        <p style="margin: 0" class="light-gray"><%= review.content %></p>
      </div>
    </div>
    <% if review.user == current_user %>
      <div>
        <%= link_to "<i class='fas fa-times'></i>".html_safe, review_path(review), method: :delete, data: { confirm: "are you sure?"}, class: "big-gray-purple-link" %>
      </div>
    <% end %>
  </div>
</div>
