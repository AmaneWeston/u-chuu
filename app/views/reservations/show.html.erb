<div class="container mt-5">
  <h1 class="main-heading mt-10">Reservation Details</h1>
  <div>
    <div class="row">
      <div class="col-12 col-lg-6">
        <p><strong>Dates: </strong></p>
        <p><%= @reservation.start_date %> - <%= @reservation.end_date %></p>
        <p><strong>Guests: </strong></p>
        <p><%= @reservation.number_of_guests %> guests</p>
      </div>
      <div class="col-12 col-lg-6">
        <div class="card-reservation">
          <div class="card-details m-5">
            <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/greece.jpg" alt="planet">
            <div class="card-reservation-infos">
              <h2><%= @reservation.planet.name %></h2>
              <p><%= @reservation.planet.description %></p>
              <span>
                <i class="fas fa-star warning"></i> - <%= @reservation.planet.reviews.present? ? "#{@reservation.planet.reviews.reduce(0) { |sum, curr| curr.rating + sum } / @reservation.planet.reviews.size }/5" : "no ratings" %></p>
            </span>
            <h2 class="card-reservation-pricing"><strong>Price:</strong> $<%= @reservation.planet.price_per_night %> x <%= (@reservation.end_date - @reservation.start_date).to_i %> nights = $<%= @reservation.planet.price_per_night * (@reservation.end_date - @reservation.start_date).to_i %></h2>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
