<div class="planet-booking card col col-6 p-4 shadow">
  <h3 class="font-weight-bold offwhite">
    <%= number_to_currency(@planet.price_per_night, precision: 0) %> per night
  </h3>
  <span style="color: gray;">
    <%= @reviews_avg %>
    <i class="fas fa-star warning ms-1 stars"></i>
    (<%= pluralize(@planet.reviews.count, 'review') %>)
  </span>
  <div class="inner-card col card p-4 mt-3">
    <%= render "reservations/form" %>
  </div>
</div>
