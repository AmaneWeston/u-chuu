<% if reservation.planet.photos.first.present? %>
  <%= cl_image_tag(reservation.planet.photos.first.key) %>
<% else %>
  <img src="https://images.unsplash.com/photo-1464802686167-b939a6910659?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxzZWFyY2h8NXx8c3BhY2V8ZW58MHx8MHx8&auto=format&fit=crop&w=500&q=60" alt="planet">
<% end %>
<div class="reservation-details-infos">
  <div class="reservation-details-card-infos">
    <h5>
      <strong><%= reservation.planet.name %></strong>
    </h5>
    <p class="mb-1">
      <%= reservation.planet.description.split(" ").first(10).join(" ") %>
      ...
    </p>
    <span>
      <%= reviews_avg %>
      <i class="fas fa-star warning ms-1 stars"></i>
      </span>
    <span>
      (<%= pluralize(reservation.planet.reviews.count, 'review') %>)
    </span>
    </div>
  </div>
</div>
