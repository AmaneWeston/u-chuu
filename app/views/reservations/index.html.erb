<div class="container">
  <h1 class="mt-3">Reservations</h1>
  <ul>
    <% @reservations.each do |reservation| %>
      <li class="p-2", style="list-style-type: none">
        <div class="d-flex flex-column border border-4 border-start-0 border-end-0">
          <div class="p-2">
            <%= link_to edit_reservation_path(reservation), class: "text-decoration-none" do %>
              <%= reservation.planet.name %>
              <%= reservation.start_date %>
              <%= reservation.end_date %>
              <%= reservation.number_of_guests %>
            <% end %>
          </div>
          <div class="p-2">
            <%= link_to "delete", reservation_path(reservation), class: "btn btn-outline-warning text-decoration-none", method: :delete, data: { confirm: "Are you sure?"} %>
            <%= link_to "see details", reservation_path(reservation), class: "btn btn-outline-warning text-decoration-none" %>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
</div>
