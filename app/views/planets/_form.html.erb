<div class="col col-6 m-auto mt-2 card p-3">
  <%= simple_form_for @planet do |f| %>
    <%= f.input :name %>
    <%= f.input :description %>
    <div class="row">
      <div class="col col-6">
        <%= f.input :price_per_night, input_html: { min: 1 } %>
      </div>
      <div class="col col-6">
        <%= f.input :maximum_guests, input_html: { min: 1 } %>
      </div>
    </div>
    <div class="row">
      <div class="col col-6">
        <%= f.input :rotation_time %>
      </div>
      <div class="col col-6">
        <%= f.input :revolution_time %>
      </div>
    </div>
    <div class="row">
      <div class="col col-6">
        <%= f.input :radius %>
      </div>
      <div class="col col-6">
        <%= f.input :avg_temp %>
      </div>
    </div>
    <%= f.input :location %>
    <%= f.input :photos, as: :file, input_html: { multiple: true } %>
    <%= f.submit class:"btn btn btn-primary mt-2 mb-1", style: "width: 100%" %>
  <% end %>
</div>
