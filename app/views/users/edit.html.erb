<div class="row d-flex justify-content-center pt-5 mt-5 mb-5">
  <div class="col col-6 mb-5">
    <div class="d-flex justify-content-center">
      <h2 class="trispace offwhite mb-3">Update Profile</h2>
    </div>
    <div class="card p-3">
      <%= simple_form_for @user do |f| %>
        <%= f.input :name %>
        <%= f.input :photo, as: :file %>
        <%= f.submit class:"btn btn-primary w-100 mt-2" %>
      <% end %>
    </div>
  <div>
</div>
